@model 作業客戶管理.Models.ViewModel.客戶銀行資訊VM.客戶銀行資訊SearchViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-4">
            <label>銀行名稱：</label>
            @Html.EditorFor(p => p.BankName)
        </div>
        <input type="submit" name="submit" value="搜尋" class="text-right" />
    </div>
}
<table class="table">
    <tr>
        <th>銀行名稱</th>
        <th>銀行代碼</th>
        <th>分行代碼</th>
        <th>帳戶名稱</th>
        <th>帳戶號碼</th>
        <th>客戶名稱</th>
        <th>功能列表</th>
    </tr>

    @foreach (var item in Model.客戶銀行資訊列表)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.銀行名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.銀行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.分行代碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.帳戶號碼)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
