@model 作業客戶管理.Models.ViewModel.客戶資料SearchViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index","客戶資料"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4">
            <label>客戶名稱：</label>
            @Html.EditorFor(a => a.Search)
        </div>
        <div class="col-lg-4">
            <label>客戶分類：</label>
            @Html.EnumDropDownListFor(a => a.客戶分類, "全部")
        </div>
        <input type="submit" name="submit" value="搜尋" class="text-right" />
        <a href="@Url.Action("ExcelFile", "客戶資料")" role="button" class="btn btn-group-sm">匯出成Excel</a>
    </div>
}
<table class="table">
    <tr>
        <th>
            客戶分類
        </th>
        <th>
            客戶名稱
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 1, tableNameNum = 1,search = Model.Search , classnum = Model.客戶分類 })"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 2, tableNameNum = 1,search = Model.Search , classnum = Model.客戶分類  })"><i class="glyphicon glyphicon-chevron-down"></i></a>
        </th>
        <th>
            統一編號
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 1, tableNameNum = 2,search = Model.Search , classnum = Model.客戶分類 })"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 2, tableNameNum = 2,search = Model.Search , classnum = Model.客戶分類  })"><i class="glyphicon glyphicon-chevron-down"></i></a>
        </th>
        <th>
            電話
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 1, tableNameNum = 3,search = Model.Search , classnum = Model.客戶分類 })"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 2, tableNameNum = 3,search = Model.Search , classnum = Model.客戶分類  })"><i class="glyphicon glyphicon-chevron-down"></i></a>
        </th>
        <th>
            傳真
            <a href="@Url.Action("OrderBy","客戶聯絡人", new { i = 1, tableNameNum = 4,search = Model.Search , classnum = Model.客戶分類 })"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="@Url.Action("OrderBy","客戶聯絡人", new { i = 2, tableNameNum = 4,search = Model.Search , classnum = Model.客戶分類  })"><i class="glyphicon glyphicon-chevron-down"></i></a>
        </th>
        <th>
            地址
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 1, tableNameNum = 5,search = Model.Search , classnum = Model.客戶分類 })"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 2, tableNameNum = 5,search = Model.Search , classnum = Model.客戶分類  })"><i class="glyphicon glyphicon-chevron-down"></i></a>
        </th>
        <th>
            Email
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 1, tableNameNum = 6,search = Model.Search , classnum = Model.客戶分類 })"><i class="glyphicon glyphicon-chevron-up"></i></a>
            <a href="@Url.Action("OrderBy","客戶資料", new { i = 2, tableNameNum = 6,search = Model.Search , classnum = Model.客戶分類  })"><i class="glyphicon glyphicon-chevron-down"></i></a>
        </th>
        <th>功能列表</th>
    </tr>

@foreach (var item in Model.客戶資料列表) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶分類)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
