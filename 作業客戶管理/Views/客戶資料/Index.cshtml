@model 作業客戶管理.Models.ViewModel.客戶資料SearchViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-4">
            <label>客戶名稱：</label>
            @Html.EditorFor(a => a.Search)
        </div>
        <div class="col-lg-4">
            <label>客戶分類：</label>
            @Html.EnumDropDownListFor(a => a.客戶分類, "全部")
        </div>
        <input type="submit" name="submit" value="搜尋" class="text-right" />
    </div>
}
<table class="table">
    <tr>
        <th>客戶分類</th>
        <th>客戶名稱</th>
        <th>統一編號</th>
        <th>電話</th>
        <th>傳真</th>
        <th>地址</th>
        <th>Email</th>
        <th>功能列表</th>
    </tr>

@foreach (var item in Model.客戶資料列表) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶分類)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}
</table>
